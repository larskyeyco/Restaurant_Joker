<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href=""><i class="fas fa-crown"></i> JOKER</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>
        <AuthorizeView Roles="admin">
            <Authorized>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="users">
                        <i class="fas fa-users"></i> &nbsp;&nbsp;&nbsp; Users
                    </NavLink>
                </li>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="companies">
                        <i class="fas fa-utensils"></i> &nbsp;&nbsp;&nbsp; Companies
                    </NavLink>
                </li>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="companyitemmenu">
                        <i class="fas fa-utensils"></i> &nbsp;&nbsp;&nbsp; Company Menu Item
                    </NavLink>
                </li>
            </Authorized>
        </AuthorizeView>
        <AuthorizeView>
            <Authorized>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="orderhist">
                        <i class="fas fa-history"></i> &nbsp;&nbsp;&nbsp; History
                    </NavLink>
                </li>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="cart">
                        <i class="fas fa-shopping-cart"></i> &nbsp;&nbsp;&nbsp; Shopping Cart
                    </NavLink>
                </li>
            </Authorized>
        </AuthorizeView>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
